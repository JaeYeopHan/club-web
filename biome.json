{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
      "enabled": false
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf",
      "ignore": []
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "complexity": {
            "noForEach": "off",
            "useLiteralKeys": "off"
        }
      }
    },
    "files": {
      "ignore": ["*.json", "*.js", "node_modules", "dist"]
    }
  }